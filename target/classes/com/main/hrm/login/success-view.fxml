<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.hrm.login.SuccessController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutY="126.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="300.0" text="Password reset" textAlignment="CENTER">
            <padding>
                <Insets left="12.0" right="12.0" />
            </padding>
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutY="174.0" prefWidth="300.0" text="Your password has been successfully reset." textFill="#cdc5c5" wrapText="true">
            <padding>
                <Insets left="12.0" right="12.0" />
            </padding>
            <font>
                <Font size="12.0" />
            </font>
        </Label>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutY="194.0" prefWidth="300.0" text="Click below to log in magically." textFill="#cdc5c5" wrapText="true">
            <padding>
                <Insets left="12.0" right="12.0" />
            </padding>
            <font>
                <Font size="12.0" />
            </font>
        </Label>
        <Button fx:id="closeBtn" layoutX="12.0" layoutY="234.0" minWidth="276.0" mnemonicParsing="false" onAction="#onCloseBtnClick" style="-fx-padding: 5; -fx-background-color: #3554D1;" text="Close" textFill="WHITE">
            <font>
                <Font size="14.0" />
            </font>
            <effect>
                <DropShadow>
                    <color>
                        <Color red="0.2078431397676468" green="0.3294117748737335" blue="0.8196078538894653" />
                    </color>
                </DropShadow>
            </effect>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
      <ImageView fx:id="iconSuccess" fitHeight="25.0" fitWidth="25.0" layoutX="135.0" layoutY="106.0"
                 pickOnBounds="true"
                  preserveRatio="true">
         <image>
            <Image url="@../../../../../imgs/check-icon.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
